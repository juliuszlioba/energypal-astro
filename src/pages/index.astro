---
import ContactForm from "../components/ContactForm";
import Enquiry from "../components/Enquiry";
import Reviews from "../components/Reviews";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Homepage">
  <main x-data="{navOpen: false}">

		<div id="pageNav">

    <div
      class="fixed right-0 top-0 z-40 pr-4 pt-10 duration-200 md:pr-12 md:pt-20 xl:pr-24 2xl:pr-44"
    >
      <button
        class="flex cursor-pointer items-center gap-2 rounded-lg bg-sky-light p-3 text-primary drop-shadow-flat-light hover:bg-primary hover:text-white"
        x-on:click="navOpen = !navOpen"
      >
        <span class="text-xl"> Menü</span>
        <svg
          x-show="!navOpen"
          stroke="currentColor"
          fill="currentColor"
          stroke-width="0"
          viewBox="0 0 512 512"
          class="h-8 w-8 shrink-0"
          height="1em"
          width="1em"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M432 176H80c-8.8 0-16-7.2-16-16s7.2-16 16-16h352c8.8 0 16 7.2 16 16s-7.2 16-16 16zM432 272H80c-8.8 0-16-7.2-16-16s7.2-16 16-16h352c8.8 0 16 7.2 16 16s-7.2 16-16 16zM432 368H80c-8.8 0-16-7.2-16-16s7.2-16 16-16h352c8.8 0 16 7.2 16 16s-7.2 16-16 16z"
          ></path></svg
        >
        <svg
          x-show="navOpen"
          x-cloak
          stroke="currentColor"
          fill="currentColor"
          stroke-width="0"
          viewBox="0 0 512 512"
          class="h-8 w-8 shrink-0"
          height="1em"
          width="1em"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="32"
            d="M368 368L144 144m224 0L144 368"></path></svg
        >
      </button>
    </div>

    <div class="fixed z-30" x-show="navOpen" x-cloak>
      <button
        class="h-screen w-screen bg-sky-light opacity-70"
        x-on:click="navOpen = !navOpen"></button>
      <div
        class="fixed top-0 min-h-screen bg-white drop-shadow-flat-light"
        x-show="navOpen"
        x-cloak
        x-transition.opacity
      >
        <nav
          class="flex h-screen flex-col gap-3 overflow-y-auto px-12 py-12 pr-12 md:gap-4 md:px-20 md:py-20 lg:gap-5 xl:px-20 2xl:px-28 2xl:py-24"
        >
          <a
            href="#vorteile"
            class="rounded-lg border-2 border-white px-5 py-3 text-left text-lg text-primary hover:border-secondary hover:bg-sky-lightest hover:text-secondary md:text-xl xl:text-2xl"
            x-on:click="navOpen = !navOpen"
          >
            Vorteile
          </a>
          <a
            href="#ueber-uns"
            class="rounded-lg border-2 border-white px-5 py-3 text-left text-lg text-primary hover:border-secondary hover:bg-sky-lightest hover:text-secondary md:text-xl xl:text-2xl"
            x-on:click="navOpen = !navOpen"
          >
            Über uns
          </a>
          <a
            href="#kunden"
            class="rounded-lg border-2 border-white px-5 py-3 text-left text-lg text-primary hover:border-secondary hover:bg-sky-lightest hover:text-secondary md:text-xl xl:text-2xl"
            x-on:click="navOpen = !navOpen"
          >
            Kunden
          </a>
          <a
            href="#ablauf"
            class="rounded-lg border-2 border-white px-5 py-3 text-left text-lg text-primary hover:border-secondary hover:bg-sky-lightest hover:text-secondary md:text-xl xl:text-2xl"
            x-on:click="navOpen = !navOpen"
          >
            Ablauf
          </a>
          <a
            href="#faq"
            class="rounded-lg border-2 border-white px-5 py-3 text-left text-lg text-primary hover:border-secondary hover:bg-sky-lightest hover:text-secondary md:text-xl xl:text-2xl"
            x-on:click="navOpen = !navOpen"
          >
            Faq
          </a>
          <a
            href="#kontakt"
            class="rounded-lg border-2 border-white px-5 py-3 text-left text-lg text-primary hover:border-secondary hover:bg-sky-lightest hover:text-secondary md:text-xl xl:text-2xl"
            x-on:click="navOpen = !navOpen"
          >
            Kontakt
          </a>
        </nav>
      </div>
    </div>

		</div>

    <section id="hero" class="min-h-screen">
      <div class="absolute z-0 flex h-screen w-full justify-end">
        <div
          class="h-full w-full overflow-hidden bg-gradient-to-r from-sky-light to-sky"
        >
          <video
            autoplay
            muted
            loop
            class="h-full w-full object-cover object-center opacity-50"
          >
            <!--<source src="https://cdn2.site-media.eu/images/0/5627381/pexels-bhumik-photography-6522668.mp4" />-->
            <source src="/assets/videos/Wind-Turbines-4_1.mp4" />
          </video>
        </div>
      </div>

      <div
        class="relative z-10 flex min-h-screen w-full flex-col items-center justify-between px-4 md:flex-row md:px-12 xl:px-24 2xl:px-44"
      >
        <div class="mb-auto block w-full pt-6 md:hidden">
          <div class="mr-14 sm:mr-0">
            <div class="w-[200px]">
              <img
                alt="Logo"
                src="/assets/EnergyPal_Logo.svg"
                style="display: block; max-width: 100%; width: initial; height: initial; background: none; opacity: 1; border: 0px; margin: 0px; padding: 0px;"
              />
            </div>
          </div>
        </div>
        <div
          class="order-2 flex w-full flex-col pb-4 md:order-1 md:min-h-screen md:pb-36 md:pt-8"
        >
          <div class="mb-auto hidden w-full flex-col md:flex">
            <div class="w-[250px]">
              <img
                alt="Logo"
                src="/assets/EnergyPal_Logo.svg"
                style="display: block; max-width: 100%; width: initial; height: initial; background: none; opacity: 1; border: 0px; margin: 0px; padding: 0px;"
              />
            </div>
          </div>
          <h1
            class="mb-2 pt-8 text-center text-2xl font-semibold tracking-wide text-primary drop-shadow-flat-light md:pt-12 md:leading-tight lg:text-3xl 2xl:text-4xl 2xl:leading-tight"
          >
            Energieanbieter-Wechsel leicht gemacht
          </h1>
          <h2
            class="mb-4 text-center text-4xl font-bold tracking-wide text-primary md:text-4xl md:leading-tight lg:text-5xl lg:leading-tight"
          >
            Sparen Sie bis zu 1200€
          </h2>
          <p
            class="pb-4 text-center text-2xl font-semibold text-secondary lg:text-3xl"
          >
            JETZT unverbindlich Strom- oder Gaspreis berechnen lassen
          </p>
          <div class="mt-3 inline-block w-full text-center md:text-left">
						<Enquiry client:visible />
          </div>
        </div>
      </div>
    </section>

    <section id="vorteile">
      <div
        class="relative z-0 w-full items-center px-4 pb-12 pt-24 md:flex-row md:px-12 md:py-32 xl:px-24 2xl:px-44"
      >
        <div>
          <h1
            class="text-center text-2xl font-semibold leading-tight text-primary md:text-left md:text-3xl xl:text-4xl"
          >
            Energiekostenberatung für Österreich
          </h1>
          <h2
            class="text-center text-2xl font-semibold leading-tight text-primary md:text-left md:text-3xl xl:text-4xl"
          >
            Privat- und Gewerbekunden
          </h2>
          <p
            class="mt-4 text-center text-lg font-semibold text-secondary md:text-left lg:text-2xl"
          >
            Ihre Vorteile
          </p>
        </div>

        <div class="mt-12 grid gap-8 sm:grid-cols-2 sm:gap-12 lg:grid-cols-3">
          <div
            class="rounded-lg bg-white p-6 drop-shadow-flat-light xl:p-8 2xl:p-12"
          >
            <svg
              stroke="currentColor"
              fill="currentColor"
              stroke-width="0"
              viewBox="0 0 16 16"
              class="h-16 w-16 rounded-lg bg-sky-light p-4 lg:h-20 lg:w-20 xl:mb-4"
              height="1em"
              width="1em"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M5.5 7a.5.5 0 0 0 0 1h5a.5.5 0 0 0 0-1h-5zM5 9.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0 2a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5z"
              >
              </path>
              <path
