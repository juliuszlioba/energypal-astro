        <div class="h-full w-full overflow-hidden bg-white">
          <img
            alt="Logo"
            src="/assets/images/process-2_400x267.jpg"
            class="h-full w-full object-cover object-center opacity-20"
          />
        </div>
      </div>
      <div
        class="relative z-0 flex w-full flex-col justify-center px-8 py-32 md:px-16 xl:px-24 2xl:px-44"
      >
